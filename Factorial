package factorial;
import java.util.*;
public class Factorial {

    public static void main(String[] args) {
        System.out.println("Enter a number to find the factorial");
        Scanner sc=new Scanner(System.in);
        int fact=1,i;
        int num=sc.nextInt();
        for(i=num;i>0;i--)
        {
         fact=fact*i;
        }
        System.out.println("The factorial of " + num + " is " + fact);
    }
    
}
